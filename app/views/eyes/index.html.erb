<div class="page-header">
  <h1>
    Eye Looks
    <a href="/eyes/new" class="btn btn-lg btn-success"> Add New Look</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Selfie</th>
        <th>Look</th>
        <th>Actions</th>
      </tr>

      <% @eyes.each do |eye| %>
      <tr>
        <td><%= eye.selfie %></td>
        <td><%= eye.look_id %></td>
        <td>
          <a href="/eyes/<%= eye.id %>" class="btn btn-primary">Show</a>
          <a href="/eyes/<%= eye.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_eye/<%= eye.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
