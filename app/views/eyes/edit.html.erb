<!-- Validation failure messages -->
<% if @eye.errors.any? %>
  <% @eye.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Eye #<%= @eye.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_eye/<%= @eye.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for selfie -->
      <div class="form-group">
        <label for="selfie" class="control-label">
          Selfie
        </label>

        <input type="text" id="selfie" name="selfie" placeholder="Selfie" class="form-control" value="<%= @eye.selfie %>">
      </div>

      <!-- Label and input for look_id -->
      <div class="form-group">
        <label for="look_id" class="control-label">
          Look
        </label>

        <input type="text" id="look_id" name="look_id" placeholder="Look" class="form-control" value="<%= @eye.look_id %>">
      </div>

      <button class="btn btn-warning">
        Update Eye
      </button>
      or
      <a href="/eyes/<%= @eye.id %>">Cancel</a>
    </form>
  </div>
</div>
